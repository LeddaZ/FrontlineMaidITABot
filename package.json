{
  "name": "frontlinemaiditabot",
  "version": "1.0.0",
  "description": "Bot bello per Girls Frontline",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "switch_to_dev": "export $(cat .env | xargs) && wget --spider https://api.telegram.org/bot$TOKEN/setWebhook?url= --delete-after && node index.js"
  },
  "author": "@LeddaZ su Telegram",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.0",
    "dotenv": "^4.0.0",
    "express": "^4.13.4",
    "node-telegram-bot-api": "^0.30.0",
    "fs-extra": "^9.0.1"
  },
  "devDependencies": {
    "auto-changelog": "^2.2.0",
    "release-it": "^14.0.1",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "bl": "^4.0.3"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": "true"
    },
    "github": {
      "release": true,
      "releaseName": "Versione ${version}",
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/LeddaZ/FrontlineMaidITABot/main/extra/changelog.hbs"
    },
    "npm": {
      "publish": false
    }
  }
}
